@model HRMS.EntityDto.LeaveApplicationDto
@{
    ViewData["Title"] = "Approve Leave Application";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h2>Approve Leave Application</h2>

<form asp-action="Approve">
    <div class="form-group">
        <label asp-for="EmployeeName" class="control-label"></label>
        <input asp-for="EmployeeName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Reason" class="control-label"></label>
        <input asp-for="Reason" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" readonly />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="LeaveApplicationId" />
        <input type="submit" value="Approve" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
