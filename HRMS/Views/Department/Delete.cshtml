@model HRMS.EntityDto.DepartmentDto

@{
    ViewData["Title"] = "Delete Department";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="card-header">
            <h4 style="text-align: center;">Delete Department</h4>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="DepartmentId" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Department Name</label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <input asp-for="Description" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <p>Are you sure you want to delete this department?</p>
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
