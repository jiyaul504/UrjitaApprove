
@model IEnumerable<HRMS.EntityDto.AuditLogDto>

@{
    ViewData["Title"] = "Audit Logs";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Audit Logs</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Action</th>
            <th>User</th>
            <th>Timestamp</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Action</td>
                <td>@log.Username</td>
                <td>@log.Timestamp</td>
                <td>@log.Details</td>
            </tr>
        }
    </tbody>
</table>
