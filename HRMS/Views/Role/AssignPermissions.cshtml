@model HRMS.EntityDto.RoleDto
@{
    ViewData["Title"] = "Assign Permissions";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<h2>Assign Permissions</h2>

<form asp-action="AssignPermissions">
    <div class="form-group">
        <label asp-for="RoleName" class="control-label"></label>
        <input asp-for="RoleName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Permissions" class="control-label"></label>
        <select asp-for="Permissions" class="form-control" multiple>
            <option value="Create">Create</option>
            <option value="Read">Read</option>
            <option value="Update">Update</option>
            <option value="Delete">Delete</option>
        </select>
        <span asp-validation-for="Permissions" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Assign Permissions" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
