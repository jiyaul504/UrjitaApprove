@model IEnumerable<HRMS.EntityDto.RoleDto>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<div class="card">
    <div class="card-header">
        <h4 style="text-align: center;">Role List</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th>Permissions</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.RoleName</td>
                        <td>@string.Join(", ", role.Permissions)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@role.RoleId" class="btn btn-danger btn-sm">Delete</a>
                            <a asp-action="AssignPermissions" asp-route-id="@role.RoleId" class="btn btn-secondary btn-sm">Assign Permissions</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
